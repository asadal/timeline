<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>타임라인 어드민 페이지</title>
    <!-- Tailwind CSS CDN -->
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            fontFamily: {
              'gmarket': ['GmarketSansMedium', 'sans-serif'],
              'noto': ['"Noto Sans KR"', 'sans-serif'],
            },
          },
        },
        plugins: [],
      }
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts (Noto Sans KR) -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap" rel="stylesheet">
    <!-- 외부 CSS 파일 연결 -->
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-4">
    <div class="w-full max-w-4xl">
        <h2 class="text-3xl font-gmarket mb-6 text-center text-green-600">타임라인 관리</h2>
        
        <!-- 웹사이트 설정 섹션 -->
        <div class="mb-8 bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-2xl font-gmarket mb-4">웹사이트 설정</h3>
            <form action="/admin/update-settings" method="POST">
                <!-- 웹사이트 제목 입력 -->
                <div class="mb-4">
                    <label for="site_title" class="block text-gray-700 mb-2">웹사이트 제목</label>
                    <input type="text" id="site_title" name="site_title" value="<%= settings.site_title %>" required class="w-full font-noto custom-input focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                
                <!-- 웹사이트 설명 입력 -->
                <div class="mb-4">
                    <label for="site_description" class="block text-gray-700 mb-2">웹사이트 설명</label>
                    <textarea id="site_description" name="site_description" rows="4" required class="w-full font-noto custom-textarea focus:outline-none focus:ring-2 focus:ring-green-500"><%= settings.site_description %></textarea>
                </div>
                
                <button type="submit" class="mt-4 bg-blue-500 hover:bg-blue-600 text-white font-gmarket py-2 px-4 rounded">
                    저장하기
                </button>
            </form>
        </div>

        <!-- 타임라인 목록 -->
        <div class="mb-8">
            <h3 class="text-2xl font-gmarket mb-4">기존 타임라인 항목</h3>
            <table class="min-w-full bg-white dark:bg-gray-800 shadow-md rounded">
                <thead>
                    <tr>
                        <th class="py-2 px-4 border-b dark:border-gray-700">날짜 및 시간</th>
                        <th class="py-2 px-4 border-b dark:border-gray-700">제목</th>
                        <th class="py-2 px-4 border-b dark:border-gray-700">시간 표시 여부</th>
                        <th class="py-2 px-4 border-b dark:border-gray-700">수정</th>
                        <th class="py-2 px-4 border-b dark:border-gray-700">삭제</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (timeline.length === 0) { %>
                        <tr>
                            <td colspan="5" class="py-2 px-4 text-center">등록된 타임라인 항목이 없습니다.</td>
                        </tr>
                    <% } else { %>
                        <% timeline.forEach(function(item) { %>
                            <tr>
                                <td class="py-2 px-4 border-b dark:border-gray-700"><%= item.date %></td>
                                <td class="py-2 px-4 border-b dark:border-gray-700"><%= item.title %></td>
                                <td class="py-2 px-4 border-b dark:border-gray-700">
                                    <%= item.show_time ? '예' : '아니오' %>
                                </td>
                                <td class="py-2 px-4 border-b dark:border-gray-700">
                                    <a href="/admin/edit/<%= item.id %>" class="text-blue-500 hover:underline">수정</a>
                                </td>
                                <td class="py-2 px-4 border-b dark:border-gray-700">
                                    <form action="/admin/delete/<%= item.id %>" method="POST" onsubmit="return confirm('정말 삭제하시겠습니까?');">
                                        <button type="submit" class="text-red-500 hover:underline">삭제</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <!-- 타임라인 추가 폼 -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-gmarket mb-6 text-center text-green-600">타임라인 추가</h3>
            <form action="/admin/add" method="POST" enctype="multipart/form-data">
                <!-- 날짜 및 시간 입력 -->
                <div class="mb-6">
                    <label for="datetime" class="block text-gray-700 mb-2">날짜 및 시간</label>
                    <input type="datetime-local" id="datetime" name="datetime" required class="w-full font-noto custom-input focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                
                <!-- 제목 입력 -->
                <div class="mb-6">
                    <label for="title" class="block text-gray-700 mb-2">제목</label>
                    <input type="text" id="title" name="title" required class="w-full font-noto custom-input focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                
                <!-- 본문 입력 -->
                <div class="mb-6">
                    <label for="body" class="block text-gray-700 mb-2">본문</label>
                    <textarea id="body" name="body" rows="4" required class="w-full font-noto custom-textarea focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
                </div>
                
                <!-- 이미지 업로드 -->
                <div class="mb-6">
                    <label for="image" class="block text-gray-700 mb-2">이미지</label>
                    <input type="file" id="image" name="image" accept="image/*" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                
                <!-- 링크 입력 -->
                <div class="mb-6">
                    <label for="link" class="block text-gray-700 mb-2">더 알아보기 링크</label>
                    <input type="url" id="link" name="link" class="w-full font-noto custom-input focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="https://example.com">
                </div>
                
                <!-- 시간 표시 옵션 추가 -->
                <div class="mb-6 flex items-center">
                    <input type="checkbox" id="show_time" name="show_time" class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded">
                    <label for="show_time" class="ml-2 block text-gray-700">날짜 옆에 시간 표시</label>
                </div>
                
                <button type="submit" class="w-full font-gmarket custom-button shadow-md hover:shadow-lg hover:bg-green-700 transition-shadow duration-300">추가하기</button>
            </form>
        </div>
    </div>
</body>
</html>

