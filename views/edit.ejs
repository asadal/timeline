<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>타임라인 수정</title>
    <!-- Tailwind CSS CDN -->
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            fontFamily: {
              'gmarket': ['GmarketSansMedium', 'sans-serif'],
              'noto': ['"Noto Sans KR"', 'sans-serif'],
            },
          },
        },
        plugins: [],
      }
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts (Noto Sans KR) -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap" rel="stylesheet">
    <!-- 외부 CSS 파일 연결 -->
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-gmarket mb-6 text-center text-blue-600">타임라인 수정</h2>
        <form action="/admin/edit/<%= timeline.id %>" method="POST" enctype="multipart/form-data">
            <!-- 날짜 및 시간 입력 -->
            <div class="mb-6">
                <label for="datetime" class="block text-gray-700 mb-2">날짜 및 시간</label>
                <input type="datetime-local" id="datetime" name="datetime" required value="<%= timeline.date.replace(' ', 'T') %>" class="w-full font-noto custom-input focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            
            <!-- 제목 입력 -->
            <div class="mb-6">
                <label for="title" class="block text-gray-700 mb-2">제목</label>
                <input type="text" id="title" name="title" required value="<%= timeline.title %>" class="w-full font-noto custom-input focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            
            <!-- 본문 입력 -->
            <div class="mb-6">
                <label for="body" class="block text-gray-700 mb-2">본문</label>
                <textarea id="body" name="body" rows="4" required class="w-full font-noto custom-textarea focus:outline-none focus:ring-2 focus:ring-blue-500"><%= timeline.body %></textarea>
            </div>
            
            <!-- 이미지 업로드 -->
            <div class="mb-6">
                <label for="image" class="block text-gray-700 mb-2">이미지</label>
                <% if (timeline.image) { %>
                    <img src="<%= timeline.image %>" alt="현재 이미지" class="mb-2 max-w-[200px]">
                <% } %>
                <input type="file" id="image" name="image" accept="image/*" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                <!-- 기존 이미지 경로를 숨김 필드로 전달 -->
                <input type="hidden" name="currentImage" value="<%= timeline.image %>">
            </div>
            
            <!-- 링크 입력 -->
            <div class="mb-6">
                <label for="link" class="block text-gray-700 mb-2">더 알아보기 링크</label>
                <input type="url" id="link" name="link" value="<%= timeline.link %>" class="w-full font-noto custom-input focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="https://example.com">
            </div>
            
            <!-- 시간 표시 옵션 추가 -->
            <div class="mb-6 flex items-center">
                <input type="checkbox" id="show_time" name="show_time" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" <%= timeline.show_time ? 'checked' : '' %>>
                <label for="show_time" class="ml-2 block text-gray-700">날짜 옆에 시간 표시</label>
            </div>
            
            <button type="submit" class="w-full font-gmarket custom-button shadow-md hover:shadow-lg hover:bg-blue-700 transition-shadow duration-300">수정하기</button>
        </form>
    </div>
</body>
</html>

