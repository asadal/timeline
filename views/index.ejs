<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title><%= settings.site_title %></title>
    <!-- Tailwind CSS 설정 -->
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              'gmarket': ['GmarketSansMedium', 'sans-serif'],
              'noto': ['"Noto Sans KR"', 'sans-serif'],
            },
          },
        },
      }
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- 외부 CSS 파일 연결 -->
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-white dark:bg-gray-900 transition-colors duration-300">

    <!-- 타임라인 목록 -->
    <div class="max-w-[800px] mx-auto px-4 mt-4">
        <ol class="relative border-l border-gray-200 dark:border-gray-700">
            <% timeline.forEach(function(item) { %>
                <li class="mb-10 ml-6">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                    <!-- 날짜 및 시간 표시 -->
                    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500 font-noto">
                        <% if (item.show_time) { %>
                            <%= item.date %>
                        <% } else { %>
                            <%= item.date.split(' ')[0] %>
                        <% } %>
                    </time>
                    <!-- 타임라인 제목 -->
                    <h3 class="text-2xl font-semibold text-gray-900 dark:text-white font-gmarket"> <!-- 1.5rem -->
                        <%= item.title %>
                    </h3>
                    <!-- 타임라인 본문 -->
                    <p class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400 font-noto"> <!-- 글자 크기 증가 -->
                        <%= item.body %>
                    </p>
                    <!-- 타임라인 이미지 -->
                    <% if (item.image) { %>
                        <img src="<%= item.image %>" alt="타임라인 이미지" class="mb-4 w-full max-w-[500px]"> <!-- 최대 가로폭 500px -->
                    <% } %>
                    <!-- 링크 -->
                    <% if (item.link) { %>
                        <a href="<%= item.link %>" target="_blank" class="inline-flex items-center px-4 py-2 text-lg font-medium text-green-600 border border-green-600 rounded-lg hover:bg-green-600 hover:text-white focus:ring-4 focus:outline-none focus:ring-green-200 dark:text-green-400 dark:border-green-400 dark:hover:text-white dark:hover:bg-green-500 dark:focus:ring-green-700 transition-colors duration-300">
                            더 알아보기
                            <svg class="w-3 h-3 ml-2 transform transition-transform duration-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                            </svg>
                        </a>
                    <% } %>
                </li>
            <% }); %>
        </ol>
    </div>

</body>
</html>

